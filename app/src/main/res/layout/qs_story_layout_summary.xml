<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/qs_2dp"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/qs_frame_summary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qs_48dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/qs_16dp"
        android:paddingRight="@dimen/qs_16dp">

        <TextView
            android:id="@+id/qs_text_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left|start"
            android:text="@string/qs_snapshot"
            android:textColor="@android:color/black"
            android:textSize="@dimen/qs_18sp" />

        <ImageView
            android:id="@+id/qs_image_summary_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right|end"
            android:adjustViewBounds="true" />
    </FrameLayout>

    <TextView
        android:id="@+id/qs_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/qs_6sp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/qs_18sp" />
</RelativeLayout>
